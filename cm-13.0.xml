<?xml version="1.0" encoding="UTF-8"?>
<manifest>

<!--Declare Sony's Remote-->
  <remote name="sony"   fetch="git://github.com/sonyxperiadev/"                                                />  
  
<!--Remove Unpatched Recovery-->
  <remove-project          name="temasek/android_bootable_recovery"                                            />
  
<!--Include Patched Recovery-->
  <project remote="github" name="TeamRevolutionSG/android_bootable_recovery"        revision="cm-13.0"                                            path="bootable/recovery"                                     />
  
<!--Qualcomm Radio Assets-->
  <project remote="github" name="CyanogenMod/android_hardware_qcom_fm"              revision="cm-13.0"                                            path="hardware/qcom/fm"                                      />

<!--Sony Proprietary Modules-->
  <project remote="sony"   name="thermanager"                                       revision="master"                   groups="device"           path="vendor/sony/system/thermanager"                        />
  <project remote="sony"   name="mkqcdtbootimg"                                     revision="master"                   groups="device"           path="vendor/sony/system/mkqcdtbootimg"                      />
  <project remote="sony"   name="timekeep"                                          revision="master"                   groups="device"           path="vendor/sony/system/timekeep"                           />
  <project remote="github" name="AdrianDC/android_hardware_sony_DASH"               revision="cm-13.0"                  groups="device"           path="hardware/sony/DASH"                                    />

<!--Vendor Assets-->
  <project remote="github" name="AdrianDC/proprietary_vendor_sony"                  revision="cm-13.0"           	              				  path="vendor/sony"                                           />

<!--Device Source Code-->
  <project remote="github" name="TeamRevolutionSG/android_device_sony_common"       revision="cm-13.0"                                            path="device/sony/common"                                    />
  <project remote="github" name="TeamRevolutionSG/android_device_sony_huashan-DC"   revision="cm-13.0"                                      path="device/sony/huashan"                                   />

<!--Kernel Source Code-->
  <project remote="github" name="AdrianDC/android_kernel_sony_msm8x60"              revision="cm-12.1"                                      path="kernel/sony/msm8x60"                                   />

</manifest>

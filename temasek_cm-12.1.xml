<!--Remove Temasek/android_build-->
  <remove-project          name="temasek/android_build"                                                        />

<!--Remove Camera2-->
  <remove-project          name="CyanogenMod/android_packages_apps_Camera2"                                    />
  
<!--Optimised android_build-->
  <project path="build" name="boylush/android_build" remote="github" revision="cm-12.1" >
    <copyfile src="core/root.mk" dest="Makefile" />
  </project>
  
<!--Sony Assets-->
  <project remote="sony"   name="thermanager"                                       revision="master"                   groups="device"           path="vendor/sony/system/thermanager"                        />

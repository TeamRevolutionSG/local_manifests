<?xml version="1.0" encoding="UTF-8"?>
<manifest>

<!--
TeamRevolution 2015
Device Specific Manifest for tulip (Xperia M4 Aqua)
For CyanogenMod 12.1 Builds Only
-->

 <remote name="sony" fetch="git://github.com/sonyxperiadev/" />    

<!--Remove Unpatched Recovery-->
 <remove-project          name="temasek/android_bootable_recovery" />
 <remove-project          name="CyanogenMod/android_device_qcom_sepolicy" />
<!--QCOM Assets-->
<project remote="github" name="CyanogenMod/android_hardware_qcom_fm" revision="cm-12.1" path="hardware/qcom/fm" />

<!--Sony Assets-->
<project remote="github" name="AdrianDC/android_hardware_sony_DASH" revision="cm-12.1" groups="device" path="hardware/sony/DASH" />
<project path="vendor/sony/system/mkqcdtbootimg" name="mkqcdtbootimg" groups="device" remote="sony" revision="master" />
<project path="vendor/sony/system/timekeep" name="timekeep" groups="device" remote="sony" revision="master" />
<project path="device/qcom/sepolicy" name="device-qcom-sepolicy" groups="device" remote="sony" revision="master" />
<project path="vendor/sony/kernel" name="vendor-sony-kernel" groups="device" remote="sony" revision="master" />
<project path="hardware/sony/thermanager" name="CyanogenMod/android_hardware_sony_thermanager" remote="github" revision="cm-12.1" />

<!--Device Assets-->
<project remote="github" name="CyanogenMod/android_device_qcom_common" revision="cm-12.1" path="device/qcom/common" />
<project remote="github" name="CyanogenMod/android_device_sony_common" revision="cm-12.1" path="device/sony/common" />
<project remote="github" name="TeamRevolutionSG/device-sony-tulip" revision="cm-12.1" path="device/sony/tulip" />

<!--Bootable Recovery Patched-->
<project remote="github" name="TeamRevolutionSG/android_bootable_recovery" revision="cm-12.1" path="bootable/recovery"                                     />

<!--Vendor Assets-->
<project remote="github" name="TeamRevolutionSG/aosp-vendor-sony" revision="cm-12.1" path="vendor/sony" />
<project remote="github" name="TeamRevolutionSG/aosp-vendor-qcom" revision="cm-12.1" path="vendor/qcom" />

</manifest>
